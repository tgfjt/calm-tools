    "express": "^5.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "preact": "^10.28.2",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.0.0"
  }
