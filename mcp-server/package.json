{
  "name": "@calm-tools/mcp-server",
  "version": "0.0.1",
  "type": "module",
  "description": "MCP Apps server for Calm Tools with Claude-connected UI",
  "main": "server.ts",
  "scripts": {
    "build": "INPUT=ui/index.html vite build",
